@using AspNetCoreDemo.Entities
@model AspNetCoreDemo.Entities.Restaurant

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <h1>Create a Resaurant</h1>

    <div>
        @using (Html.BeginForm())
        {
            <div>
                @Html.LabelFor(m=>m.Name)
                <br />
                @Html.TextBoxFor(m => m.Name)
                @Html.ValidationMessageFor(m=>m.Name)
            </div>
            <br />
            <div>
                @Html.LabelFor(m=>m.Cuisine)
                <br />
                @Html.DropDownListFor(m => m.Cuisine, Html.GetEnumSelectList(typeof(CuisineType)))
                @Html.ValidationMessageFor(m => m.Cuisine)
            </div>
            <br />
            <br />
            <br />
            <div>
                <input type="submit" value="Save" />
            </div>
        }

    </div>

</body>
</html>