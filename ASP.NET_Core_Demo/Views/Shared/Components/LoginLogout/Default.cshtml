@if (User.Identity.IsAuthenticated)
{
    <div style="display:inline-block">
        <span >Hello, @User.Identity.Name</span>
    </div>
    <form  style="display:inline-block" method="post" asp-controller="Account" asp-action="Logout" asp-antiforgery="true">
        <input class="btn btn-default" type="submit" value="Logout" />
    </form>
}
else
{
    <a class="btn btn-default" asp-controller="Account" asp-action="Register">Register</a>
    <a class="btn btn-default" asp-controller="Account" asp-action="Login">Login</a>
}